<%- contentFor('css') %>
<style>
    body{ background: #ededed; height: 100vh; }
    .tabs li.is-active a{ color: #d9353c; border-bottom-color: #d9353c; }
</style>
<%- contentFor('body') %>
<div style="display: flex; justify-content: center;">
    <div style="margin-top: 10%" width="480px">           
        <div class="card">
            <div class="tabs is-danger is-centered" style="margin-bottom: 0px">
                <ul>
                    <li class="is-active">
                        <a> Login </a>
                    </li>
                    <!-- <li>
                        <a href="/auth/register"> Register </a>
                    </li> -->
                </ul>
            </div>
            <form method="GET" action="/chat">
                <div class="card-content">
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" name="username" type="text" placeholder="Username / Nickname">
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <div class="control has-icons-left">
                            <div class="select is-fullwidth">
                              <select name="group">
                                <option>Pilih Group Chat</option>
                                <% groups.forEach((groupName) => { %>
                                    <option value="<%= groupName %>"><%= groupName %></option>
                                <% }) %>
                              </select>
                            </div>
                            <span class="icon is-left">
                              <i class="fas fa-users"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <footer class="card-footer">
                    <input type="submit" class="button is-danger is-fullwidth" value="Login">
                </footer>
            </form>
        </div>
    </div>
</div>